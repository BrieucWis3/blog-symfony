{% extends 'base.html.twig' %}

{% block body %}
    
    <div class="container">
        <div class="row">
            <h1 class="text-center">Réinitialisation de votre mot de passe</h1>
        </div>
        <br/>
        <div class="card">
            <div class="card-body">
              {{ form_start(resetPasswordRequestForm) }}
                <div class="mb-3 row col-8">
                 <label for="inputPassword" class="col-sm-4 col-form-label">Entrez votre adresse email :</label>
                    <div class="col-sm-6">
                       {{ form_row(resetPasswordRequestForm.email) }}
                    </div>
                    <div class="col-2">
                        <button type="submit" class="btn btn-primary">Réinitialiser</button>
                    </div>
                </div>
              {{ form_end(resetPasswordRequestForm) }}
            </div>
        </div>
    </div>
{% endblock %}
