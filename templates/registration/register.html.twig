{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section class="container my-3">
    <div class="row">
        <div class="col">
            <h1>Inscription</h1>

            {{ form_start(registrationForm) }}
                <fieldset class="mb-3 col-6">
                    <legend>Mon identité</legend>
                    {{ form_row(registrationForm.firstname) }}
                    {{ form_row(registrationForm.lastname) }}
                    {{ form_row(registrationForm.email) }}
                </fieldset>
                <fieldset class="mb-3 col-6">
                    <legend>Mes coordonnées</legend>
                    {{ form_row(registrationForm.zipcode) }}
                    {{ form_row(registrationForm.city) }}
                </fieldset>
                
                <div class="mb-3 row col-8">
                    <label for="inputPassword" class="col-sm-4 col-form-label">Mot de passe :</label>
                    <div class="col-sm-4">
                      {{ form_row(registrationForm.plainPassword.first) }}
                    </div>
                </div>
                    
                <div class="mb-3 row col-8">
                    <label for="inputPassword" class="col-sm-4 col-form-label">Confirmez votre mot de passe :</label>
                    <div class="col-sm-4">
                      {{ form_row(registrationForm.plainPassword.second) }}
                    </div>
                </div>
                
                <fieldset class="mb-3 col-6">
                {{ form_row(registrationForm.RGPDConsent) }}
                </fieldset>
                
                <button type="submit" class="btn btn-primary btn-lg" class="my-3">M'inscrire</button>
                <a class="btn btn-secondary" href="{{ path('app_login') }}">Me connecter</a>
            {{ form_end(registrationForm) }}
        </div>
    </div>
    </section>
{% endblock %}
